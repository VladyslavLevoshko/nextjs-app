generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  email         String?   @unique
  posts         Post[]
  passwordHash  String?
  createdAt     DateTime @default(now())
}


model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int?
  author    User?   @relation(fields: [authorId], references: [id])
  price     Int?
  category  String?
}